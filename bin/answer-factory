#!/usr/bin/env ruby

require 'fileutils'
include FileUtils::Verbose

project_root = ARGV.first
gem_root = "#{File.dirname(__FILE__)}/.."

if Dir.exist?(project_root) then
  puts "project directory /#{project_root} already exists"
else
  Dir.mkdir(project_root)
  cd("./#{project_root}") do
    touch "./Thorfile"
  end
end

