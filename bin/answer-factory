#!/usr/bin/env ruby

project_root = ARGV.first
gem_root = "#{File.dirname(__FILE__)}/.."

Dir.mkdir(project_root) unless Dir.exists?(project_root)
Dir.mkdir("#{project_root}/lib") unless Dir.exists?("#{project_root}/lib")
Dir.mkdir("#{project_root}/lib/instructions") unless Dir.exists?("#{project_root}/lib/instructions")
Dir.mkdir("#{project_root}/lib/operators") unless Dir.exists?("#{project_root}/lib/operators")
Dir.mkdir("#{project_root}/lib/types") unless Dir.exists?("#{project_root}/lib/types")

Dir.mkdir("#{project_root}/spec") unless Dir.exists?("#{project_root}/spec")